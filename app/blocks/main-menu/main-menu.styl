.main-menu
  background rgba(44, 13, 0, .6)
  box-shadow 0 3px 5px 0 rgba(44, 13, 0, .6)
  &__lists
    display flex
    flex-direction column
    align-items center
    @media (min-width 420px)
      flex-direction row
      justify-content center
      flex-wrap wrap
  &__item
    padding-top 0.5rem
    padding-right 0.5rem
    padding-bottom 0.5rem
    padding-left 0.5rem
    transition 0.7s background-color, 1s box-shadow
    // transition 1s box-shadow
    @media (min-width 36.25rem)
      padding-top 1rem
      padding-right 1rem
      padding-bottom 1rem
      padding-left 1rem
    &:hover
      background-color #0006
      box-shadow inset 0 -2px 0 0 white
      @media (min-width 36.25rem)
        box-shadow inset 0 -4px 0 0 white
    &:active
      background-color green